<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Studera" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/color_action01</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSurface">@color/white</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:colorBackground">@color/color_bg02</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/color_grey02</item>

        <item name="fontFamily">@font/e_ukraine_regular</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">?colorSurface</item>
        <item name="boxStrokeColor">@color/color_grey04</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemIconTint">@color/navigation_item_foreground</item>
        <item name="itemTextColor">@color/navigation_item_foreground</item>
        <item name="itemTextAppearance">@style/Text3</item>
        <item name="background">?colorSurface</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/color_grey03</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">?colorPrimary</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipBackgroundColor">@color/color_bg02</item>
        <item name="chipCornerRadius">4dp</item>
        <item name="android:focusable">false</item>
    </style>


    <style name="Widget.App.MaterialButton.Cornered" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Small</item>
        <item name="backgroundTint">@color/color_action01</item>
        <item name="strokeColor">@color/color_action01</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/ButtonText1</item>
    </style>

    <style name="ShapeAppearance.App.Small" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerSize">6dp</item>
    </style>
    
    <style name="Heading1">
        <item name="fontFamily">@font/e_ukraine_light</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Heading2">
        <item name="fontFamily">@font/e_ukraine_light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Heading3">
        <item name="fontFamily">@font/e_ukraine_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonText1">
        <item name="fontFamily">@font/e_ukraine_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FieldText1">
        <item name="fontFamily">@font/e_ukraine_ultralight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text1">
        <item name="fontFamily">@font/e_ukraine_ultralight</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text2">
        <item name="fontFamily">@font/e_ukraine_ultralight</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text3">
        <item name="fontFamily">@font/e_ukraine_ultralight</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>