<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_bottomsheet"
    android:paddingHorizontal="12dp"
    android:paddingBottom="24dp">

    <ImageView
        android:id="@+id/handlebar"
        android:layout_width="64dp"
        android:layout_height="6dp"
        android:src="@drawable/bg_handlebar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewLessonTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="10:05 - 11:40"
        android:textAppearance="@style/Heading1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/handlebar"/>

    <TextView
        android:id="@+id/textViewLessonTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cучасні технології програмування на перфокартах"
        android:textAppearance="@style/Text1"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewLessonTime"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chipLessonType"
        style="@style/Widget.App.Chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Практична"
        android:textColor="@color/white"
        android:textAppearance="@style/Heading3"
        app:chipBackgroundColor="@color/color_red01"
        app:ensureMinTouchTargetSize="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewLessonTitle"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipLecturer"
        style="@style/Widget.App.Chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:text="О.О. Арсірій"
        android:textColor="@color/color_grey02"
        android:textAppearance="@style/Heading3"
        app:ensureMinTouchTargetSize="false"
        app:layout_constraintStart_toEndOf="@id/chipLessonType"
        app:layout_constraintTop_toBottomOf="@id/textViewLessonTitle"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Посилання"
        android:textAppearance="@style/Heading3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chipLecturer"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:src="@drawable/bg_on_surface"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewLink"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Відсутнє"
        android:textAppearance="@style/FieldText1"
        android:textColor="?android:textColorSecondary"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="6dp"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="@id/imageView1"
        app:layout_constraintStart_toStartOf="@id/imageView1"
        app:layout_constraintEnd_toEndOf="@id/imageView1"
        app:layout_constraintBottom_toBottomOf="@id/imageView1"/>
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        style="@style/Widget.App.MaterialButton.Cornered"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Перейти за посиланням"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/imageView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>