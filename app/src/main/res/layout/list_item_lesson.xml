<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp"
    android:background="@drawable/bg_list_item_lesson"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="12dp"
    android:padding="12dp"
    android:theme="@style/Theme.Studera"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewLessonTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/ButtonText1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="08:00 - 09:50"/>

    <TextView
        android:id="@+id/textViewLessonTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:textAppearance="@style/Text2"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewLessonTime"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Сучасні технології програмування на перфокартах"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chipLessonType"
        style="@style/Widget.App.Chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Практична"
        android:textColor="@color/white"
        android:textAppearance="@style/Heading3"
        app:chipBackgroundColor="@color/color_red01"
        app:ensureMinTouchTargetSize="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewLessonTitle"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipLecturer"
        style="@style/Widget.App.Chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:text="Практична"
        android:textColor="@color/color_grey02"
        android:textAppearance="@style/Heading3"
        app:ensureMinTouchTargetSize="false"
        app:layout_constraintStart_toEndOf="@id/chipLessonType"
        app:layout_constraintTop_toBottomOf="@id/textViewLessonTitle"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_arrow_right"/>


</androidx.constraintlayout.widget.ConstraintLayout>